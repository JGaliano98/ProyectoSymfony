{# templates/alumno/editar_alumno.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .container {
            width: 400px;
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 20px;  /* Añade padding interno para evitar que los elementos toquen los bordes */
        }
        h1 {
            text-align: center;
            color: #333;
        }
        form {
            margin-top: 20px;
        }
        label {
            font-weight: bold;
            color: #555;
            margin-bottom: 8px;
        }
        input[type='text'], input[type='password'], select, textarea {
            width: calc(100% - 16px); /* Calcula el ancho menos el padding para mantener el diseño dentro del contenedor */
            padding: 8px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            width: 100%;
            padding: 10px 0;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Editar Alumno</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}
